<!-- line chart de Pagos y Ventas de los Últimos 8 Días -->
<div class="bg-slate-700 rounded-lg p-6 mb-8 chart-container">
    <div class="relative h-28">
        <!-- Estado de carga -->
        <div id="chartLoader" class="absolute inset-0 flex items-center justify-center bg-slate-700 rounded-lg">
            <div class="flex flex-col items-center space-y-4">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-purple-400 loader-spinner"></div>
                <p class="text-slate-300 text-sm animate-pulse">Cargando estadísticas...</p>
                <div class="flex space-x-1">
                    <div class="w-2 h-2 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 0ms;"></div>
                    <div class="w-2 h-2 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 150ms;"></div>
                    <div class="w-2 h-2 bg-purple-400 rounded-full animate-bounce" style="animation-delay: 300ms;"></div>
                </div>
            </div>
        </div>
        <!-- Canvas del chart (inicialmente oculto) -->
        <canvas id="lineChart" class="w-full h-full opacity-0 transition-opacity duration-500"></canvas>
    </div>
</div>
